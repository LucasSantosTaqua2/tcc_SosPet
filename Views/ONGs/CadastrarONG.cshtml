@model SOSPets.Models.ONGsModel

@{
    ViewData["Title"] = "ADM: Cadastrar ONG";
}

<link rel="stylesheet" href="~/css/post_page.css" />

<div class="container-post text-center">
    <h1>Cadastrar ONG</h1>

    <br>

    <form asp-action="CadastrarONG" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome da ONG" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="control-label">Descrição</label>
            <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição da ONG" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Endereco" class="control-label">Endereço</label>
            <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço da ONG" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cidade" class="control-label">Cidade</label>
            <input asp-for="Cidade" class="form-control" placeholder="Digite a cidade da ONG" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="Tel" class="control-label">Telefone</label>
            <input asp-for="Tel" id="Telefone" class="form-control" placeholder="Digite o telefone da ONG" />
            <span asp-validation-for="Tel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="Digite o email da ONG" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Imagem" class="control-label">Logo da ONG</label>
            <input type="file" accept="image/*" name="imagem" asp-for="Imagem" class="form-control" />
        </div>
        <div class="form-group btn-criar">
            <a asp-action="CentralONGs" class="btn btn-light" role="button">Voltar para a Central</a>
            <input type="submit" value="Cadastrar ONG" class="btn btn-primary" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
