@model SOSPets.Models.EncontradosModel

@{
    ViewData["Title"] = "Cadastrar Encontrado";
}

<link rel="stylesheet" href="~/css/post_page.css" />

<div class="container-post text-center">
    <h1>Cadastrar animal encontrado</h1>
    <p>Forneça o máximo de informações para que o dono encontre seu animal o quanto antes!</p>

    <br>

    <form asp-action="CadastrarEncontrado" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group part-form">
            <label asp-for="Descricao" class="control-label">Descrição:</label>
            <input asp-for="Descricao" class="form-control input-cad" placeholder="Digite a descrição. Ex.: Onde se encontra ou foi visto por ultimo." />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group part-form">
            <label asp-for="Cidade" class="control-label">Cidade</label>
            <input asp-for="Cidade" class="form-control input-cad" placeholder="Digite a cidade " />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group part-form">
            <label asp-for="Imagem" class="control-label">Foto do animal</label>
            <input type="file" accept="image/*" name="imagem" asp-for="Imagem" class="form-control input-cad" />
        </div>
        <div class="form-group btn-criar">
            <a asp-action="CentralEncontrados" class="btn btn-light" role="button">Voltar para a Central</a>
            <input type="submit" value="Cadastrar Animal" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
