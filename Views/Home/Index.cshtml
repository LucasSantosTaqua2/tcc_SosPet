@model HomeViewModel;

@{
    ViewData["Title"] = "Home";
}


<div class="fundo">
    <img src="~/img/img-fundo.png"/>
</div>
<!-------------------------------------------------------------------------------------------------->
<div class="home-content">
    <h1 style="text-align: center">ONGs</h1>
    <div class="coluna-post row row-cols-4 ">
        @foreach (var item in Model.listOngs)
        {
            <div class="row">
                <div class="card ">
                    <img src="~/img/ONGs/@Html.DisplayFor(modelItem => item.Imagem)" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        <p class="card-text">
                            <span>Endereço:</span> @Html.DisplayFor(modelItem => item.Endereco)<br>
                            <span>Cidade:</span> @Html.DisplayFor(modelItem => item.Cidade)
                        </p>
                    </div>
                    <a class="btn btn-primary align-items-center" role="button" asp-controller="ONGs" asp-action="Detalhes" asp-route-id="@item.Id">Saber Mais</a>
                </div>

            </div>
        }
    </div>

    <a asp-controller="ONGs" asp-action="CentralONGs" class="link link-vermais">Clique aqui para conhecer mais ONGs!</a>

</div>


