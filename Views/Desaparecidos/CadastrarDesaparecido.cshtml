@model SOSPets.Models.DesaparecidosModel

@{
    ViewData["Title"] = "Cadastrar Desaparecido";
}

<link rel="stylesheet" href="~/css/post_page.css" />

<div class="container-post text-center">
    <h1>Cadastrar animal desaparecido</h1>
    <p>Forneça o máximo de informações para as pessoas ajudarem a encontrar seu animal!</p>
    <br>

    <form asp-action="CadastrarDesaparecido" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group part-form">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control input-cad" placeholder="Digite o nome do animal" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group part-form">
            <label asp-for="Descricao" class="control-label input-cad">Descrição:</label>
            <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição. Ex.: Visto por ultimo, endereço, cor..." />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group part-form">
            <label asp-for="Cidade" class="control-label input-cad">Cidade</label>
            <input asp-for="Cidade" class="form-control" placeholder="Digite a cidade " />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group part-form">
            <label asp-for="Imagem" class="control-label input-cad">Foto do animal</label>
            <input type="file" accept="image/*" name="imagem" asp-for="Imagem" class="form-control" />
        </div>
        <div class="form-group btn-criar">
            <a asp-action="CentralDesaparecidos" class="btn btn-light" role="button">Voltar para a Central</a>
            <input type="submit" value="Cadastrar Animal" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
