@model HomeViewModel

@{
    ViewData["Title"] = "Detalhes da conta";
}

<link rel="stylesheet" href="~/css/user_page.css" />

    <div class="container-user">
        <h1>@Html.DisplayFor(model => model.usuario.Nome)</h1>

        <br>

        <div class="dados-user">
            <input type="hidden" asp-for="usuario.Id" />
            <div class="input-user-dados">
                <label for="">Email:  </label>
                <input asp-for="usuario.Email" readonly class="form-control" />
            </div>
            <div class="input-user-dados">
                <label for="">Telefone:  </label>
                <input asp-for="usuario.Tel" readonly class="form-control" />
            </div>
        </div>

        <div class="btn-options-user">
            <a asp-action="Delete" asp-route-id="@Model?.usuario.Id" role="button" class="btn btn-danger">Excluir Conta</a>
            <a asp-action="Logout" role="button" class="btn btn-secondary">Deslogar</a>
        @if (User.IsInRole("ADM"))
        {
            <a class="btn btn-light" asp-controller="Usuario" asp-action="Index">Central de Usuarios</a>
        } else
        {
            <a class="btn btn-light" asp-controller="Home" asp-action="Index">Voltar para Home</a>
        }
        </div>

        <div class="home-content">
    <h1 style="text-align: center">Para Adoção</h1>
    <div class="coluna-post row row-cols-4 ">
        @foreach (var item in Model.listAdocao)
        {
                <div class="row">
                    <div class="card ">
                    <img src="~/img/adocao/@Html.DisplayFor(modelItem => item.Imagem)" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        <p class="card-text">
                            Raça: @Html.DisplayFor(modelItem => item.Raca)<br>
                            Sexo: @Html.DisplayFor(modelItem => item.Sexo)<br>
                            Idade: @Html.DisplayFor(modelItem => item.Idade)<br>
                            Cor: @Html.DisplayFor(modelItem => item.Cor)<br>
                            Porte: @Html.DisplayFor(modelItem => item.Porte)<br>
                            Cidade: @Html.DisplayFor(modelItem => item.Cidade) 
                        </p>
                    </div>
                    <a class="btn btn-primary align-items-center" role="button" asp-controller="Adocao" asp-action="Detalhes" asp-route-id="@item.Id">Quero adotar</a>
                </div>

            </div>
        }
    </div>
    </div>

    </div>

