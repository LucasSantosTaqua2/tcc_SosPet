@model SOSPets.Models.UsuarioModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}
<link rel="stylesheet" href="/css/cadastro.css" />
<link rel="shortcut icon" href="~/img/sos-pets-icone.ico" />

<section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">
            <img src="~/img/cachorro-removebg-preview.png" styles="pointer-events: none;" alt="illustration" class="illustration" style="margin-top: 50%;" />
                <h1 class="opacity">Cadastrar</h1>

            <form asp-action="Cadastro">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Nome" type="text" name="nome" placeholder="Nome Completo" />

                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="email" name="email" placeholder="E-mail" />
                        
                    </div>
                    <div class="form-group">
                    <input asp-for="Tel" type="text" name="tel" placeholder="Telefone" id="Telefone" />
                        
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" name="senha" type="password" placeholder="Senha" />
                        
                    </div>
                    <!--<input type="password" placeholder="Repetir Senha" />-->
                    <input type="submit" class="opacity" value="Finalizar">
                </form>
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>
    </section>
   
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script>
        $('#Telefone').mask('(00) 00000-0000');
    </script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
